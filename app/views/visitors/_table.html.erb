<div class="row">
  <h4 class="h4"><%= table_name %></h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Visitor Type</th>
        <th scope="col">Visit Count</th>
        <th scope="col">Date and Time</th>
        <th scope="col"> View</th>
      </tr>
    </thead>
    <tbody>
      <% if records.present? %>
        <% records.each_with_index do |record, index|%>
          <tr class="<%= record.classification == 'guest' ? 'table-success' : 'table-danger'%>">
            <td><%= index + 1 %></td>
            <td><%= record&.name %></td>
            <td><%= record.classification %></td>
            <td><%= record.no_of_visit %></td>
            <td><%= record.last_visited.strftime("%m/%d/%Y %I:%M%p")%></td>
            <td><%= link_to "view", record %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="table-active text-center">No Data Available</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>